<nav class="bg-gray-800 px-4 py-2 flex items-center justify-between">
  <div class="flex items-center">
    <%= link_to "/", class: "flex items-center" do %>
      <%= image_tag("/logo2.png", alt: "Logo", class: "h-16 mr-2") %>
      <span class="text-white font-semibold text-xl tracking-tight">Flyght Club</span>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div class="flex items-center gap-2 text-white divide-x">
      <div class="flex items-center gap-2">
        <p><%= current_user.email %></p>
        <svg class="w-8 h-8" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
          <path d="M399 384.2C376.9 345.8 335.4 320 288 320H224c-47.4 0-88.9 25.8-111 64.2c35.2 39.2 86.2 63.8 143 63.8s107.8-24.7 143-63.8zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256zm256 16a72 72 0 1 0 0-144 72 72 0 1 0 0 144z"/>
        </svg>
      </div>
      <div class="pl-2">
        <%= button_to t('auth.sign_out'), destroy_user_session_path, method: :delete, class: "text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
      </div>
    </div>
  <% else %>
    <div class="flex items-center gap-2 text-white">
      <%= link_to t('auth.sign_up'), new_user_registration_path, class: "block mt-4 lg:inline-block lg:mt-0 text-gray-300 hover:text-white mr-4" %>
      <%= link_to t('auth.sign_in'), new_user_session_path, class: "text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 shadow-lg shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
    </div>
  <% end %>
</nav>