<table>
   <thead>
   <tr>
     <th>ID</th>
     <th>Code PNR</th>
     <th>User ID</th>
     <th>Numéro de vol</th>
     <th>Aéroport de départ</th>
     <th>Date de départ</th>
     <th>Aéroport d'arrivée</th>
     <th>Date d'arrivée</th>
   </tr>
   </thead>
   <tbody>
   <% bookings.each do |booking| %>
     <% booking.flights.each_with_index do |flight, index| %>
       <tr>
         <% if index == 0 %>
           <td rowspan="<%= booking.flights.count %>"><%= booking.id %></td>
           <td rowspan="<%= booking.flights.count %>"><%= booking.code_pnr %></td>
           <td rowspan="<%= booking.flights.count %>"><%= booking.user_id %></td>
         <% end %>
         <td><%= flight.number %></td>
         <td><%= Flight.airport_name(flight.departure_airport) %></td>
         <td><%= flight.departure_date %></td>
         <td><%= Flight.airport_name(flight.arrival_airport) %></td>
         <td><%= Flight.arrival_date(flight.departure_date, flight.duration) %></td>
         <td>     <%= button_to t('auth.sign_out'), bookings_destroy_path(id: booking.id), method: :delete, class: "text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
         </td>
       </tr>
     <% end %>
   <% end %>
   </tbody>
 </table>
