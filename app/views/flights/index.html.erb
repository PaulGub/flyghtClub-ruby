<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <p class="text-green-500"><%= notice %></p>

  <h1 class="text-2xl mb-4">Flights</h1>

  <div class="flex flex-wrap -mx-2">
    <% @flights.each do |flight| %>
      <div class="w-full md:w-1/2 lg:w-1/3 px-2 mb-4">
        <div class="bg-gray-200 rounded-lg overflow-hidden shadow-md hover:shadow-lg">
          <div class="px-4 py-3 border-b border-gray-300">
            <h2 class="text-lg font-medium text-gray-800 truncate"><%= flight.number %></h2>
          </div>
          <div class="px-4 py-3">
            <p class="text-sm font-medium text-gray-600">Departure Date</p>
            <p class="text-md text-gray-800"><%= flight.departure_date %></p>
          </div>
          <div class="px-4 py-3 bg-gray-100 border-t border-gray-300">
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
